{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Listes des invit√©s avec recherche</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body {
      background-color: #f4f6f9;
      padding: 2rem;
      font-family: 'Segoe UI', sans-serif;
    }
    h2 {
      font-weight: 600;
      margin-bottom: 1rem;
      text-align: center;
      color: #343a40;
    }
    .list-container {
      display: flex;
      gap: 2rem;
      flex-wrap: wrap;
      justify-content: center;
    }
    .card-list {
      flex: 1 1 350px;
      background: #fff;
      border-radius: 1rem;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
      padding: 1.5rem 2rem;
      min-width: 320px;
      max-width: 480px;
    }
    input.search-input {
      width: 100%;
      margin-bottom: 1rem;
      padding: 0.5rem 0.75rem;
      font-size: 1rem;
      border-radius: 0.5rem;
      border: 1px solid #ced4da;
      transition: border-color 0.3s ease;
    }
    input.search-input:focus {
      outline: none;
      border-color: #4e54c8;
      box-shadow: 0 0 5px rgba(78, 84, 200, 0.5);
    }
    table {
      width: 100%;
      border-collapse: separate;
      border-spacing: 0;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 2px 12px rgba(0,0,0,0.05);
    }
    thead tr {
      background: linear-gradient(90deg, #4e54c8, #8f94fb);
      color: #fff;
      font-weight: 600;
      font-size: 1rem;
      text-align: center;
    }
    thead th {
      padding: 12px 0;
      border: none !important;
    }
    tbody tr {
      transition: background-color 0.25s ease;
      cursor: default;
      position: relative;
    }
    tbody tr:hover {
      background-color: #f1f3ff;
    }
    tbody td {
      padding: 14px 0;
      text-align: center;
      border-top: none !important;
      border-bottom: 1px solid #e9ecef;
      vertical-align: middle;
      position: relative;
    }
    tbody tr:last-child td {
      border-bottom: none;
    }
    /* Nom centr√© */
    .name-cell {
      font-weight: 500;
    }
    /* Ic√¥ne positionn√©e √† droite absolue */
    .icon-end {
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      font-size: 1.2rem;
      pointer-events: auto; /* enable clicks */
      cursor: pointer;
    }
    .icon-minus {
      color: #e55353;
      font-weight: bold;
    }
    .icon-plus {
      color: #38b000;
      font-weight: bold;
    }
  </style>
</head>
<body>

  <div class="list-container">
    <!-- Liste des valid√©s -->
    <div class="card-list">
      <h2>‚úÖ Liste des valid√©s</h2>
      <input type="text" class="search-input" placeholder="Rechercher dans les valid√©s..." data-target="table-valides" />
      <table>
        <thead>
          <tr>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Classe</th>
          </tr>
        </thead>
        <tbody id="table-valides">
          <tr>
            <td class="name-cell">Dupont</td>
            <td>Alice</td>
            <td>Terminale S
              <i class="bi bi-dash-lg icon-end icon-minus" title="Valid√©"></i>
            </td>
          </tr>
          <tr>
            <td class="name-cell">Martin</td>
            <td>Jean</td>
            <td>1√®re STMG
              <i class="bi bi-dash-lg icon-end icon-minus" title="Valid√©"></i>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Liste des inscrits -->
    <div class="card-list">
      <h2>üìù Liste des inscrits</h2>
      <input type="text" class="search-input" placeholder="Rechercher dans les inscrits..." data-target="table-inscrits" />
      <table>
        <thead>
          <tr>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>Classe</th>
          </tr>
        </thead>
        <tbody id="table-inscrits">
          <tr>
            <td class="name-cell">Lemoine</td>
            <td>Lucie</td>
            <td>2nde 2
              <i class="bi bi-plus-lg icon-end icon-plus" title="Inscrit"></i>
            </td>
          </tr>
          <tr>
            <td class="name-cell">Nguyen</td>
            <td>David</td>
            <td>1√®re G1
              <i class="bi bi-plus-lg icon-end icon-plus" title="Inscrit"></i>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    const tableValides = document.getElementById("table-valides");
    const tableInscrits = document.getElementById("table-inscrits");

    // Fonction pour g√©rer le clic sur les ic√¥nes
    function setupIconListeners(tbody, isValides) {
      tbody.querySelectorAll('i').forEach(icon => {
        icon.style.cursor = 'pointer';
        icon.onclick = () => {
          const row = icon.closest('tr');
          const newRow = row.cloneNode(true);

          if (isValides) {
            // - passe √† +
            newRow.querySelector('i').classList.replace('bi-dash-lg', 'bi-plus-lg');
            newRow.querySelector('i').classList.replace('icon-minus', 'icon-plus');
            newRow.querySelector('i').setAttribute('title', 'Inscrit');

            tableInscrits.insertBefore(newRow, tableInscrits.firstChild);
          } else {
            // + passe √† -
            newRow.querySelector('i').classList.replace('bi-plus-lg', 'bi-dash-lg');
            newRow.querySelector('i').classList.replace('icon-plus', 'icon-minus');
            newRow.querySelector('i').setAttribute('title', 'Valid√©');

            tableValides.insertBefore(newRow, tableValides.firstChild);
          }

          row.remove();

          setupIconListeners(tableValides, true);
          setupIconListeners(tableInscrits, false);
        };
      });
    }

    setupIconListeners(tableValides, true);
    setupIconListeners(tableInscrits, false);

    // Fonction de filtre pour la recherche
    function filterTable(input) {
      const filter = input.value.toLowerCase();
      const targetId = input.getAttribute('data-target');
      const tbody = document.getElementById(targetId);
      const rows = tbody.getElementsByTagName('tr');

      for (let row of rows) {
        // On r√©cup√®re tout le texte de la ligne (nom, pr√©nom, classe)
        const text = row.textContent.toLowerCase();
        if (text.includes(filter)) {
          row.style.display = '';
        } else {
          row.style.display = 'none';
        }
      }
    }

    // Ajout des √©couteurs sur les inputs de recherche
    document.querySelectorAll('.search-input').forEach(input => {
      input.addEventListener('input', () => filterTable(input));
    });
  </script>

</body>
</html>

{% endblock %} 
