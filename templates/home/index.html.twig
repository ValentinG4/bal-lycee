<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Scanner un QR Code</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

  <style>
    body {
      transition: background 0.5s ease-in-out;
      background: linear-gradient(135deg,rgb(0, 145, 255),rgb(0, 4, 255));
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #fff;
      font-family: 'Segoe UI', sans-serif;
    }

    .scanner-card {
      background: #fff;
      color: #333;
      border-radius: 1rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
      padding: 2rem;
      max-width: 400px;
      width: 100%;
    }

    #reader {
      width: 100%;
      border-radius: 0.75rem;
      overflow: hidden;
    }

    .title-icon {
      font-size: 3rem;
      color: #667eea;
    }

    .result-box {
      margin-top: 1.5rem;
    }
  </style>
</head>
<body id="page-body">
  <div class="scanner-card text-center">
    <div class="mb-3">
      <i class="bi bi-qr-code-scan title-icon"></i>
      <h2 class="fw-bold mt-2">Scanner votre QR Code</h2>
      <p class="text-muted">Utilisez votre caméra pour scanner un code.</p>
    </div>

    <div id="reader"></div>

    <div id="result" class="alert alert-secondary mt-4 result-box">
      En attente de scan...
    </div>
  </div>

  <script>
    const resultBox = document.getElementById("result");
    const pageBody = document.getElementById("page-body");

    function isValidCode(text) {
      // Exemple simple : si le code contient "OK", on le considère comme valide
      return text.toLowerCase().includes("ok");
    }

    function onScanSuccess(decodedText, decodedResult) {
      html5QrcodeScanner.clear();

      if (isValidCode(decodedText)) {
        resultBox.className = "alert alert-success mt-4 result-box";
        resultBox.innerHTML = `<strong>✅ Code VALIDE :</strong> ${decodedText}`;
        pageBody.style.background = "linear-gradient(135deg, #38ef7d, #11998e)";
      } else {
        resultBox.className = "alert alert-danger mt-4 result-box";
        resultBox.innerHTML = `<strong>❌ Code NON VALIDE :</strong> ${decodedText}`;
        pageBody.style.background = "linear-gradient(135deg, #ff416c, #ff4b2b)";
      }
    }

    function onScanFailure(error) {
      // Silencieux
    }

    const html5QrcodeScanner = new Html5QrcodeScanner("reader", {
      fps: 10,
      qrbox: { width: 250, height: 250 }
    });
    html5QrcodeScanner.render(onScanSuccess, onScanFailure);
  </script>

</body>
</html>
{% endblock %} 
