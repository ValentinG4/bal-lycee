{% extends 'base.html.twig' %}

{% block title %}Scanner un QR Code{% endblock %}

{% block stylesheets %}

  <link rel="stylesheet" href="{{asset('styles/scan.css')}}">

{% endblock %}

{% block body %}

  <div id="page-body" class="scanner-card text-center">
    <div class="mb-3">
      <i class="bi bi-qr-code-scan title-icon"></i>
      <h2 class="fw-bold mt-2">Scanner votre QR Code</h2>
      <p class="text-muted">Appuyez sur le bouton pour lancer la d√©tection.</p>
    </div>

    <div id="reader"></div>

    <button id="scan-btn" class="btn btn-success mt-3">
      Scanner <i class="bi bi-play-circle ms-1"></i>
    </button>

    <button id="next-btn" class="btn btn-primary mt-3 d-none">
      Suivant <i class="bi bi-arrow-right-circle ms-1"></i>
    </button>

    <div id="result" class="alert alert-secondary mt-4 result-box">
      En attente d'action...
    </div>
  </div>

<div class="mt-3">

  <button id="test-btn" class="btn btn-secondary mt-2">Tester le token</button>

</div>
{% endblock %}

{% block javascripts %}

    <script src="{{ asset('js/scan.js')}}"></script>
    <script src="https://unpkg.com/html5-qrcode" type="text/javascript"></script>

{% endblock %}

