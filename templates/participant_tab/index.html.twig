<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <title>Participants</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

  <style>
    body { background-color: #f4f6f9; padding: 2rem; font-family: 'Segoe UI', sans-serif; }
    h2 { text-align: center; margin-bottom: 1rem; }
    .list-container { display: flex; gap: 2rem; flex-wrap: wrap; justify-content: center; }
    .card-list { flex: 1 1 400px; background: #fff; border-radius: 1rem; box-shadow: 0 8px 20px rgba(0,0,0,0.1); padding: 1.5rem; }
    .search-input { width: 100%; margin-bottom: 1rem; padding: 0.5rem; border-radius: 0.5rem; border: 1px solid #ced4da; }
    table { width: 100%; border-collapse: collapse; }
    thead tr { background: linear-gradient(90deg, #4e54c8, #8f94fb); color: white; }
    th, td { text-align: center; padding: 10px; border-bottom: 1px solid #ddd; }
    i.bi { cursor: pointer; font-size: 1.2rem; }
    .icon-minus { color: #e55353; }
    .icon-plus { color: #38b000; }
  </style>
</head>
<body>

  <div class="list-container">
    <div class="card-list">
      <h2>‚úÖ Liste des valid√©s</h2>
      <input type="text" class="search-input" placeholder="Rechercher..." data-target="table-valides" />
      <table>
        <thead><tr><th>Nom</th><th>Pr√©nom</th><th>Classe</th><th></th></tr></thead>
        <tbody id="table-valides"></tbody>
      </table>
    </div>
    <div class="card-list">
      <h2>üìù Liste des inscrits</h2>
      <input type="text" class="search-input" placeholder="Rechercher..." data-target="table-inscrits" />
      <table>
        <thead><tr><th>Nom</th><th>Pr√©nom</th><th>Classe</th><th></th></tr></thead>
        <tbody id="table-inscrits"></tbody>
      </table>
    </div>
  </div>

  <script>
    let isFetching = false;

    function fetchParticipants() {
      if (isFetching) return;
      isFetching = true;

      fetch('/participants/list')
        .then(response => response.json())
        .then(participants => {
          $('#table-valides').empty();
          $('#table-inscrits').empty();

          participants.forEach(p => {
            const iconClass = p.statut === 'pass√©' ? 'bi-dash-lg icon-minus' : 'bi-plus-lg icon-plus';
            const row = $(`
              <tr>
                <td>${p.nom}</td>
                <td>${p.prenom}</td>
                <td>${p.classe}</td>
                <td><i class="bi ${iconClass}" data-id="${p.id}" title="Basculer"></i></td>
              </tr>
            `);

            if (p.statut === 'pass√©') {
              $('#table-valides').append(row);
            } else {
              $('#table-inscrits').append(row);
            }
          });

          bindToggleActions();
        })
        .finally(() => isFetching = false);
    }

    function bindToggleActions() {
      $('i[data-id]').off('click').on('click', function () {
        const id = $(this).data('id');
        $.post(`/participants/toggle/${id}`, fetchParticipants);
      });
    }

    // Recherche dans chaque tableau
    document.querySelectorAll('.search-input').forEach(input => {
      input.addEventListener('input', () => {
        const filter = input.value.toLowerCase();
        const tbody = document.getElementById(input.getAttribute('data-target'));
        Array.from(tbody.rows).forEach(row => {
          row.style.display = row.textContent.toLowerCase().includes(filter) ? '' : 'none';
        });
      });
    });

    // Actualisation auto
    setInterval(fetchParticipants, 1000);
    fetchParticipants();
  </script>
</body>
</html>
